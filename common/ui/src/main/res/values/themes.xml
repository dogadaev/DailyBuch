<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Fonts  -->

    <style name="Text.System.R" parent="Text">
        <item name="fontFamily">@font/raleway_regular</item>
    </style>

    <style name="Text.User.R" parent="Text">
        <item name="fontFamily">@font/cormorant_garamond_regular</item>
    </style>

    <style name="Text.System.B" parent="Text">
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="Text.System.SB" parent="Text">
        <item name="fontFamily">@font/raleway_semi_bold</item>
    </style>

    <style name="Text.User.B" parent="Text">
        <item name="fontFamily">@font/cormorant_garamond_bold</item>
    </style>

    <style name="Text.User.R.14" parent="Text.User.R">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.User.R.16" parent="Text.User.R">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.System.R.14" parent="Text.System.R">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.System.R.16" parent="Text.System.R">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.System.B.14" parent="Text.System.B">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.System.B.16" parent="Text.System.B">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.System.B.18" parent="Text.System.B">
        <item name="android:textSize">18sp</item>
    </style>

    <!--  UI elements styles  -->

    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton" />

    <style name="Button" parent="Widget.MaterialComponents.Button" />

    <style name="Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="Text.Toolbar.Title" parent="Text.System.B.18">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Diary.Title" parent="Text.System.B.14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageButton.Toolbar.Add" parent="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/space_x2</item>

        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="tint">@color/white</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>