<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_nav_graph">

    <include app:graph="@navigation/home_nav_graph" />
    <include app:graph="@navigation/diary_nav_graph" />
    <include app:graph="@navigation/diary_creation_form_nav_graph" />

    <action
        android:id="@+id/action_home"
        app:destination="@+id/home_nav_graph"
        app:popUpTo="@navigation/nav_graph" />

    <action
        android:id="@+id/action_diary"
        app:destination="@+id/diary_nav_graph"
        app:popUpTo="@navigation/home_nav_graph">

        <argument
            android:name="diaryId"
            app:argType="string" />
    </action>

    <action
        android:id="@+id/action_diary_creation_form"
        app:destination="@+id/diary_creation_form_nav_graph"
        app:popUpTo="@navigation/home_nav_graph"/>
</navigation>